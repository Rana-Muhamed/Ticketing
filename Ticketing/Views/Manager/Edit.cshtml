@model TicketsViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Assign Technician</h1>
<form asp-action="Edit">
    <div class=" form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="Description"></label>
        <input asp-for="Description" class="form-control" readonly />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label class="col-form-label" asp-for="TechnicianId"></label>
        <input asp-for="TechnicianId" class="form-control" />
        <span asp-validation-for="TechnicianId" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class=" btn btn-primary"/> | 
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>
@section validationScriptSection{


            <partial name="_ValidationScriptsPartial" />
}