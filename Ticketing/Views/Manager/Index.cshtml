@model IEnumerable<TicketsViewModel>
@{
    ViewData["Title"] = "Tickets";
}

<h1>All Tickets</h1>
<br />
<br />
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="search by ID" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(P => P.Id)</td>
                <td>@Html.DisplayNameFor(P => P.CreateDateTime)</td>
                <td>@Html.DisplayNameFor(P => P.LastActionAt)</td>
                <td>@Html.DisplayNameFor(P => P.LastUpdatedById)</td>
                <td>@Html.DisplayNameFor(P => P.SLEndDateTime)</td>
                <td>Details</td>
                <td>Assign Technician</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var tickets in Model)
            {
                <tr>
                    <td>@tickets.Id</td>
                    <td>@tickets.CreateDateTime</td>
                    <td>@tickets.LastActionAt</td>
                    <td>@tickets.LastUpdatedById</td>
                    <td>@tickets.SLEndDateTime</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@tickets.Id" class=" btn btn-warning"><i class="fas fa-eye"></i> Details</a>

                    </td>
                     <td>
                        <a asp-action="Edit" asp-route-id="@tickets.Id" class=" btn btn-success"><i class="fas fa-edit"></i> Assign Tech.</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Tickets</h3>

    </div>
}
